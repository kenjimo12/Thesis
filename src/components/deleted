    width: 36,
    height: 36,
    borderRadius: 10,
    background: "rgba(255,255,255,0.08)",
    border: "1px solid rgba(255,255,255,0.12)",
    color: "#fff",
    cursor: "pointer",
    fontFamily: "Nunito, sans-serif",
    fontWeight: 800,
  },
  list: {
    padding: 10,
    overflow: "auto",
  },
  thread: {
    display: "flex",
    gap: 10,
    padding: 10,
    borderRadius: 16,
    background: "rgba(255,255,255,0.06)",
    border: "1px solid rgba(255,255,255,0.08)",
    marginBottom: 10,
    cursor: "pointer",
    textAlign: "left",
  },
  avatar: {
